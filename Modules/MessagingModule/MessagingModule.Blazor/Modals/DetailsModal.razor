@using ConectOne.Domain.Extensions
@using MudBlazor

<MudDialog>

    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Message" Class="mr-3 mb-n1"/>
            Message Details
        </MudText>
    </TitleContent>

    <DialogContent>
        <MudGrid Style="width:100%">
            <MudItem xs="12" md="12" lg="12" xl="12" xxl="12">
                <MudText Typo="Typo.h6">
                    @_message.Subject
                </MudText>
            </MudItem>
            <MudItem xs="12" md="12" lg="12" xl="12" xxl="12">
                <MudText Color="Color.Default" Typo="Typo.subtitle1" Style="font-weight: 300; width:100%;">@_message.Message?.HtmlToPlainText()</MudText>
            </MudItem>
            <MudItem MudItem xs="12" md="12" lg="12" xl="12" xxl="12">
                @if (_message.DocumentLinks.Any())
                {

                    <MudCard Style="width:100%">
                        <MudText Style="padding-left:16px; padding-top:5px;"><strong>Message Document Links:</strong></MudText>
                        <MudList T="string" Dense="@true" DisableGutters="false">
                            @foreach (var item in _message.DocumentLinks)
                            {
                                <MudListItem Text="@item.TruncateLongString(30)" Icon="@Icons.Material.Filled.Attachment" Href="@item" target="_blank" />
                            }
                        </MudList>
                    </MudCard>
                }
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Ok</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="NotifyAsync" Color="Color.Success">Notify Again</MudButton>
    </DialogActions>
</MudDialog>

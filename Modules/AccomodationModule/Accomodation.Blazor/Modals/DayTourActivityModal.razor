@using AccomodationModule.Domain.DataTransferObjects
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<EditForm Model="@DayTour" OnValidSubmit="SaveAsync">
    <DataAnnotationsValidator/>
    <MudDialog>
        <DialogContent>
            <MudGrid>     
                <MudItem xs="2" md="2">
                    <MudTextField Label="Day Nr" @bind-Value="@DayTour.DayNr" ShowToolbar="false" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="10" md="10">
                    <MudTimePicker Label="Time" @bind-Date="@DayTour.StartTime" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudSelect ToStringFunc="@_daytourActivityTemplateConverter" T="DayTourActivityTemplateDto" Label="Vacation Activity" @bind-Value="DayTour.DayTourActivityTemplate" AnchorOrigin="Origin.BottomLeft" Variant="Variant.Outlined">
                        @foreach (var state in DayTourActivityTemplates)
                        {
                            <MudSelectItem T="DayTourActivityTemplateDto" Value="@state">@state.Name</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="SaveAsync" ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
@using AccomodationModule.Domain.DataTransferObjects
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudGrid>        
            <MudItem xs="12">
                <MudSelect ToStringFunc="@_vacationExtensionConverter" T="VacationDto" Label="Vacation Extensions" @bind-Value="VacationExtension" AnchorOrigin="Origin.BottomLeft" Variant="Variant.Outlined">
                    @foreach (var state in _availableVacationExtensions)
                    {
                        <MudSelectItem T="VacationDto" Value="@state" title="@state">@state</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="SaveAsync" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

@using AccomodationModule.Domain.DataTransferObjects
@using ConectOne.Domain.Extensions
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<EditForm Model="@MealAddition" OnValidSubmit="SaveAsync">
    <DataAnnotationsValidator/>
    <MudDialog>
        <DialogContent>
            <MudGrid>        
                <MudItem xs="2" md="2">
                    <MudTextField Label="Day Nr" @bind-Value="@MealAddition.DayNr" ShowToolbar="false" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="10" md="10">
                    <MudTimePicker Label="Time" @bind-Date="@MealAddition.StartTime" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12">
                    <MudSelect ToStringFunc="@_mealAdditionTemplateConverter" T="MealAdditionTemplateDto" Label="Meal Addition" @bind-Value="MealAddition.MealAdditionTemPlate" AnchorOrigin="Origin.BottomLeft" Variant="Variant.Outlined">
                        @foreach (var state in _availableMealAdditionTemplates)
                        {
                            <MudSelectItem T="MealAdditionTemplateDto" Value="@state">@state.Restaurant.Name - @(string.IsNullOrEmpty(state.Notes) ? state.MealType : state.Notes.TruncateLongString(55))</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="SaveAsync" ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
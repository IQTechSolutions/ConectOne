
@using Radzen.Blazor
@using FilingModule.Blazor.Modals
@using FilingModule.Domain.Enums
@using MudBlazor

<MudItem xs ="12" sm ="4" md ="3">
    <MudSingleImageCropperUpload OnFileAccepted="CoverImageChanged" Caption="@Lodging.Details.Name" Src="@_imageSource" ImageType="UploadType.Cover" TEntity="typeof(Lodging)" ParentId="@Lodging.Details.LodgingId" />
</MudItem>

<MudItem xs="12" sm="8" md="9">
    <MudCard Elevation="25">
        <MudCardHeader>
            <CardHeaderContent>
                    <MudText Typo="Typo.body1" Class="no-margin skin-color">Accommodation Details for @Lodging.Details.Name</MudText>
                <MudText Typo="Typo.subtitle2">Please complete the following product details information!</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Lodging.Details.Name" Label="Name" For="@(() => Lodging.Details.Name)" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Lodging.Details.Name" Label="DisplayName" For="@(() => Lodging.Details.Name)" Variant="Variant.Outlined" />
                </MudItem>
                @if (!KuburiPropery)
                {
                    <MudItem xs="12">
                        <Accomodation.Blazor.Components.Categories.MudLodgingCategoryMultiSelectionDropdownBox Lodging="@Lodging" Variant="Variant.Outlined" />
                    </MudItem>
                
                    <MudItem xs="12">
                        <MudTextField @bind-Value="Lodging.Details.Attractions" T="string" Label="Attractions" Variant="Variant.Outlined" Lines="4" HelperText="Attractions available for this lodging" />
                    </MudItem>

                    <MudItem xs="12">
                        <label style="padding-left:20px;">Teaser Text</label>
                        <RadzenHtmlEditor @bind-Value=@Lodging.Details.TeaserText style="height: 300px;" />
                    </MudItem>
                }
                <MudItem xs="12">
                    <label style="padding-left:20px;">Proposal Descriptions</label>
                    <RadzenHtmlEditor @bind-Value=@Lodging.Details.Description style="height: 300px;" />
                </MudItem>
                <MudItem xs="12">
                    <label style="padding-left:20px;">Website Descriptions</label>
                    <RadzenHtmlEditor @bind-Value=@Lodging.Details.OnlineDescription style="height: 300px;" />
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudItem>
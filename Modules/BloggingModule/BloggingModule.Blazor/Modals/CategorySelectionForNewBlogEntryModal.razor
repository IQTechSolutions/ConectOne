@using GroupingModule.Domain.DataTransferObjects
@using MudBlazor

<MudDialog>
    <TitleContent>
        @{
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                Select the Category for Entry
            </MudText>
        }
    </TitleContent>
    <DialogContent>
        @if (!_loaded)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        }
        else
        {
            <MudSelect ToStringFunc="_categoryConverter" T="CategoryDto" Label="Feed Category" @bind-Value="_selectedCategory" AnchorOrigin="Origin.BottomLeft">
                @foreach (var state in _availableCategories)
                {
                    <MudSelectItem T="CategoryDto" Value="@state">@state.Name</MudSelectItem>
                }
            </MudSelect>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="SubmitAsync" Color="Color.Success">Select</MudButton>
    </DialogActions>
</MudDialog>
@page "/listing_tiers"

@using BusinessModule.Blazor.Components.ListingTiers
@using ConectOne.Blazor.Components
@using Microsoft.AspNetCore.Authorization
@using MudBlazor

@attribute [Authorize]

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<MudGrid>
    <MudItem md="6">
        <DefaultTitle Title="Listing Tiers" Caption="All available Listing Tiers for business listings" />
    </MudItem>
    <MudItem md="6" Style="float:right">
        <MudBreadcrumbs Items="_items" Style="float:right"></MudBreadcrumbs>
    </MudItem>
    <MudItem md="12">
        <ListingTierTable />
    </MudItem>
</MudGrid>

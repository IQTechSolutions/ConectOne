@page "/agegroups/update/{AgeGroupId}"
@using ConectOne.Blazor.Components
@using FilingModule.Blazor.Modals
@using FilingModule.Domain.Enums
@using MessagingModule.Blazor.Components.Messages
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@using NeuralTech.Base.Enums
@using SchoolsModule.Domain.Entities

@attribute [Authorize]

<EditForm Model="_ageGroup" OnValidSubmit="UpdateAsync">
    <MudGrid>
        <MudItem md="6">
            <DefaultTitle Title="Update Age Group" Caption="Complete or change to update age group information" />
        </MudItem>
        <MudItem md="6" Style="float:right">
            <MudBreadcrumbs Items="_items" Style="float:right"></MudBreadcrumbs>
        </MudItem>
        <MudItem md="12">
    
            <MudTabs>
                <MudTabPanel Text="Details">
                    
                    <DataAnnotationsValidator />
                    <MudGrid>
                        <MudItem xs="12" sm="12" md="3" lg="3">
                            <MudSingleImageCropperUpload OnFileAccepted="CoverImageChanged" Caption="@($"{_ageGroup.Name}")" Src="@_imageSource" ImageType="UploadType.Cover" Entity="typeof(AgeGroup)" ParentId="@_ageGroup.AgeGroupId" />
                    </MudItem>
                        <MudItem xs="12" sm="12" md="9" lg="9">
                            <MudCard>
                                <MudCardHeader>
                                    <MudText Align="Align.Center" Typo="Typo.h6">Personal Information</MudText>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudGrid>
                                        <MudItem md="12">
                                            <MudTextField Label="Age Group" Class="mt-3" @bind-Value="_ageGroup.Name" For="@(() => _ageGroup.Name)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </MudItem>
                                        <MudItem md="6">
                                        <MudTextField Label="Min Age" Class="mt-3" @bind-Value="_ageGroup.MinAge" For="@(() => _ageGroup.MinAge)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </MudItem>
                                        <MudItem md="6">
                                        <MudTextField Label="Max Age" Class="mt-3" @bind-Value="_ageGroup.MaxAge" For="@(() => _ageGroup.MaxAge)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </MudItem>
                                    </MudGrid>
                                </MudCardContent>
                            </MudCard>
                        </MudItem>

                    </MudGrid>
                    
                </MudTabPanel>
                <MudTabPanel Text="Learners">
                    <SchoolsModule.Blazor.Components.Learners.LearnersTable AgeGroup="@(_ageGroup.ToDto())" />
                </MudTabPanel>
                <MudTabPanel Text="Messages">
                    <MessagesTable MessageType="(int)MessageType.AgeGroup" EntityId="@_ageGroup.AgeGroupId"></MessagesTable>
                </MudTabPanel>
            </MudTabs>
        </MudItem>
        <MudItem xs="6" sm="6" md="6" lg="6">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth>Save</MudButton>
        </MudItem>
    
        <MudItem xs="6" sm="6" md="6" lg="6">
            <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary" Class="ml-auto" FullWidth>Cancel</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>

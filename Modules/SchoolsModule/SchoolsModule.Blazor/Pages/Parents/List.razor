@page "/parents"
@using ConectOne.Blazor.Components
@using Microsoft.AspNetCore.Authorization
@using MudBlazor
@using SchoolsModule.Blazor.Components.Parents

@attribute [Authorize]

@using static Microsoft.AspNetCore.Components.Web.RenderMode

@rendermode InteractiveServer

<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<MudGrid>
    <MudItem md="6">
        <DefaultTitle Title="Parents" Caption="All available school learner parents" />
    </MudItem>
    <MudItem md="6" Style="float:right">
        <MudBreadcrumbs Items="_items" Style="float:right"></MudBreadcrumbs>
    </MudItem>
    <MudItem md="12">
        <ParentsTable />
    </MudItem>
</MudGrid>
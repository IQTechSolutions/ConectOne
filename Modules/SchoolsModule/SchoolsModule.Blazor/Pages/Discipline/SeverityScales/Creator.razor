@page "/discipline/scales/create"
@using ConectOne.Blazor.Components
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@attribute [Authorize]

<EditForm Model="_scale" OnValidSubmit="CreateAsync">
    <MudGrid>
        <MudItem md="6">
            <DefaultTitle Title="Create Scale" Caption="Add severity scale" />
        </MudItem>
        <MudItem md="6" Style="float:right">
            <MudBreadcrumbs Items="_items" Style="float:right" />
        </MudItem>
        <MudItem md="12">
            <DataAnnotationsValidator />
            <MudTextField Label="Name" @bind-Value="_scale.Name" />
            <MudNumericField T="int" Label="Score" @bind-Value="_scale.Score" />
            <MudTextField Label="Description" @bind-Value="_scale.Description" Lines="3" />
        </MudItem>
        <MudItem md="6">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Save</MudButton>
        </MudItem>
        <MudItem md="6">
            <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary">Cancel</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>

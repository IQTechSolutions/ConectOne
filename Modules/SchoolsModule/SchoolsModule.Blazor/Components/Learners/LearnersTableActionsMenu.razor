@using MudBlazor
@using NeuralTech.Base.Enums

@if (_canEdit)
{ 
    <MudMenuItem Icon="@Icons.Material.Filled.Edit" Href="@($"/learners/update/{LearnerId}")">Edit</MudMenuItem>
}
@if (_canDelete && DisplayDeleteButton)
{
    <MudMenuItem Icon="@Icons.Material.Filled.Delete" @onclick="OnRemoveLearner">Delete</MudMenuItem>
}
@if (_userInfo is not null || IgnoreRegistration)
{
    @if (_cancreateChat)
    {
        <MudMenuItem Icon="@Icons.Material.Filled.Message" Href="#">Create Chat</MudMenuItem>
    }
    @if (_canSendMessage)
    {
        <MudMenuItem Icon="@Icons.Material.Filled.Notifications" Href="@($"/{Enum.GetName(typeof(MessageType), MessageType.Learner)}/messages/create/{LearnerId}")">Message</MudMenuItem>
    }
}
`
@using ConectOne.Domain.Extensions
@using GroupingModule.Domain.DataTransferObjects
@using MudBlazor
@using NeuralTech.Base.Enums

<MudTable MultiSelection="MultiSelection" SelectedItems="SelectedPagedCategories" SelectedItemsChanged="@((HashSet<CategoryDto> se) => OnSelectedCategoryChanged(se))" Elevation="25" ServerData="GetCategoriesAsync" Dense="@_dense" Bordered="@_bordered" Striped="@_striped" Hover="true" @ref="_table">
		
    <ToolBarContent>
        @if (_canSearch)
        {
            <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Placeholder="Search Events" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" />
        }
        @if (_canCreate)
        {
            <MudSpacer/>
            <MudButton Variant="Variant.Filled" Href="@CreateUrl" StartIcon="@Icons.Material.Filled.Add" Color="Color.Primary" IconColor="Color.Surface">New Category</MudButton>
        }

        @if (ShowLinkCategories && _canAddActivityGroup)
        {
            if (!MultiSelection)
            {
                <MudButton Variant="Variant.Filled" OnClick="OnLinkCategories" StartIcon="@Icons.Material.Filled.Link" IconColor="Color.Surface" Color="Color.Info" Style="margin-left:15px;">
                    Link Categories
                </MudButton>
            }
            else
            {
                <MudButton Variant="Variant.Filled" OnClick="OnLinkCategories" StartIcon="@Icons.Material.Filled.PanoramaFishEye" IconColor="Color.Surface" Color="Color.Info" Style="margin-left:15px;">
                    View Categories
                </MudButton>
            }
        }

        @ToolbarButtons

    </ToolBarContent>

	<HeaderContent>
		@if (!_dense)
		{
			<MudTh>Cover</MudTh>
		}

		<MudTh>Name</MudTh>
		<MudTh>Description</MudTh>
        <MudTh>
            <div style="float:right">
                <MudMenu Icon="@Icons.Material.Filled.Settings" Color="Color.Primary" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.BottomLeft">
                    <MudMenuItem @onclick="() => _dense = !_dense">
                        <MudSwitch @bind-Value="@_dense" Color="Color.Secondary" Style="margin-left: 5px;">
                            Dense
                        </MudSwitch>
                    </MudMenuItem>
                    <MudMenuItem @onclick="() => _striped = !_striped">
                        <MudSwitch @bind-Value="@_striped" Color="Color.Tertiary" Style="margin-left: 5px;">
                            Striped
                        </MudSwitch>
                    </MudMenuItem>
                    <MudMenuItem @onclick="() => _bordered = !_bordered">
                        <MudSwitch @bind-Value="@_bordered" Color="Color.Warning" Style="margin-left: 5px;">
                            Bordered
                        </MudSwitch>
                    </MudMenuItem>
                </MudMenu>
            </div>
        </MudTh>
	</HeaderContent>

	<RowTemplate>
	
		@if (!_dense)
		{
			<MudTd><MudImage Width="50" Height="50" Src="@context.CoverImageUrl"/> </MudTd>
		}
		<MudTd>@context.Name</MudTd>
        <MudTd>
            <strong>
                @if (context.Description != null)
                {
                    @context.Description.HtmlToPlainText().TruncateLongString(150)
                }
            </strong>
        </MudTd>
        <MudTd DataLabel="Actions" Style="text-align: right">
            @if (_canEdit || _canDelete || _canCreateEvent || _canSendMessage)
            {
                <MudMenu Label="Actions" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Secondary" AnchorOrigin="Origin.TopLeft">
                    @if (_canEdit)
                    {
                        <MudMenuItem Icon="@Icons.Material.Filled.Edit" @onclick="@(() => NavigateToCategory(context.CategoryId))">Edit</MudMenuItem>
                    }
                    @if (_canDelete)
                    {
                        <MudMenuItem Icon="@Icons.Material.Filled.Delete" @onclick="@(() => DeleteCategory(context.CategoryId))">Delete</MudMenuItem>
                    }
                    @if (_canCreateEvent)
                    {
                        <MudMenuItem Icon="@Icons.Material.Filled.Event" Href="@($"/activities/activitygroups/events/create/{context.CategoryId}")">Create Event</MudMenuItem>
                    }
                    @if (_canSendMessage)
                    {
                        <MudMenuItem Icon="@Icons.Material.Filled.NotificationAdd" Href="@($"/{Enum.GetName(typeof(MessageType), MessageType.ActivityCategory)}/messages/create/{context.CategoryId}/false/true")">SendMessage</MudMenuItem>
                    }
                </MudMenu>
            }
        </MudTd>		
	</RowTemplate>

	<PagerContent>
		@if (_table.Items is not null && _table.Items.Any())
		{
			<MudTablePager/>
		}
	</PagerContent>
	
</MudTable>
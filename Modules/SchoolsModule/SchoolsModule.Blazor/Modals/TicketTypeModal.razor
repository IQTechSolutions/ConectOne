@using ConectOne.Blazor.Components
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
<MudDialog Class="mud-dialog-width-lg">

    <TitleContent>
        <DefaultTitle Title="Create New Learner" Caption="Complete the information to add a new learner"/>
    </TitleContent>

    <DialogContent>

        <EditForm Model="TicketType" OnSubmit="Save">
            <MudGrid>

                <MudItem xs="12" sm="12" md="12" lg="12">
                    <MudCard>
                        <MudCardHeader>
                            <MudText Align="Align.Center" Typo="Typo.h4">
                                Personal Information
                            </MudText>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudGrid>
                                <DataAnnotationsValidator/>

                                <MudItem md="12">
                                    <MudTextField Label="Ticket Type" Class="mt-3" @bind-Value="TicketType.Name" For="@(() => TicketType.Name)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                </MudItem>
                                <MudItem md="12">
                                    <MudTextField Label="Description" Lines="2" Class="mt-3" @bind-Value="TicketType.Description" For="@(() => TicketType.Description)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                </MudItem>
                                <MudItem md="3">
                                    <MudTextField Label="Qty Available" Class="mt-3" @bind-Value="TicketType.QuantityAvailable" For="@(() => TicketType.QuantityAvailable)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                </MudItem>

                                <MudItem md="6">
                                    <MudTextField Label="Price" Class="mt-3" @bind-Value="TicketType.Price" For="@(() => TicketType.Price)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                </MudItem>

                                <MudItem md="3">
                                    <MudTextField Disabled="true" Label="Qty Sold" Class="mt-3" Value="TicketType.QuantitySold" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                </MudItem>

                            </MudGrid>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem xs="6" sm="6" md="6" lg="6">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth>
                        Save
                    </MudButton>
                </MudItem>
                <MudItem xs="6" sm="6" md="6" lg="6">
                    <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary" Class="ml-auto" FullWidth>
                        Cancel
                    </MudButton>
                </MudItem>

            </MudGrid>
        </EditForm>
    </DialogContent>
</MudDialog>
@using MudBlazor
@using SchoolsModule.Application.ViewModels

<MudDialog>
    <TitleContent>
        @{
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Class="mr-3 mb-n1" />
                Select the activity group you want to add the event to
            </MudText>
        }
    </TitleContent>
    <DialogContent>
        @if (!_loaded)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
        }
        else
        {
            <MudSelect ToStringFunc="_activityGroupConverter" T="ActivityGroupViewModel" Label="Activity Gtoups" @bind-Value="_selectedActivityGroup" AnchorOrigin="Origin.BottomCenter">
                @foreach (var state in _activityGroups)
                {
                    <MudSelectItem T="ActivityGroupViewModel" Value="@state">@state.Name</MudSelectItem>
                }
            </MudSelect>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="SubmitAsync" Color="Color.Success">Select</MudButton>
    </DialogActions>
</MudDialog>

@using MudBlazor
<MudDialog DefaultFocus="DefaultFocus.None">
    <DialogContent>
        <MudText>This role has been found in the archives, would you like to restore it, or would you like to recreate a default version of this role</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Restore">Restore</MudButton>
        <MudButton Color="Color.Info" Variant="Variant.Filled" OnClick="ReCreate">Re-Create</MudButton>
    </DialogActions>
</MudDialog>
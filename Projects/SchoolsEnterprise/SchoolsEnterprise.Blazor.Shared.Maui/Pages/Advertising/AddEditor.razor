@page "/advertising/update/{AdvertisementId}"
@page "/advertising/create"

@attribute [Authorize]
@using AdvertisingModule.Domain.Entities
@using ConectOne.Blazor.Components
@using FilingModule.Blazor.Modals
@using FilingModule.Domain.Enums
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<MobilePageTitle Title="Business Directory"></MobilePageTitle>

@attribute [Authorize]

<EditForm Model="_advertisement" OnValidSubmit="@(() => UpdateAsync())">
    <MudGrid>
        <MudItem md="6">
            <DefaultTitle Title="Update Advertisement" Caption="Complete or change to update advertisement information" />
        </MudItem>
        <MudItem md="6" Style="float:right">
            <MudBreadcrumbs Items="_items" Style="float:right"></MudBreadcrumbs>
        </MudItem>
        <MudItem md="12">
            <MudTabs>
                <MudTabPanel Text="Details">
                    <DataAnnotationsValidator />
                    <MudGrid>
                        <MudItem xs="12" sm="12" md="3" lg="3">
                            <MudSingleImageCropperUpload OnFileAccepted="CoverImageChanged" Caption="@(_advertisement.Title)" Src="@_imageSource" ImageType="UploadType.Cover" Entity="typeof(Advertisement)" ParentId="@_advertisement.Id" />
                        </MudItem>
                        <MudItem xs="12" sm="12" md="9" lg="9">
                            <MudCard>
                                <MudCardHeader>
                                    <MudText Align="Align.Center" Typo="Typo.h6">Advertisement Information</MudText>
                                </MudCardHeader>
                                <MudCardContent>
                                    <MudGrid>
                                        <MudItem md="12">
                                            <MudTextField Label="Title" Class="mt-3" @bind-Value="_advertisement.Title" For="@(() => _advertisement.Title)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </MudItem>
                                        <MudItem md="12">
                                            <MudTextField T="string" Label="Description" Class="mt-3" @bind-Value="_advertisement.Description" Margin="Margin.Dense" Variant="Variant.Outlined" Lines="3" />
                                        </MudItem>
                                        <MudItem md="12">
                                            <MudTextField Label="Url" Class="mt-3" @bind-Value="_advertisement.Url" For="@(() => _advertisement.Url)" Margin="Margin.Dense" Variant="Variant.Outlined" />
                                        </MudItem>
                                        <MudItem md="6">
                                            @* <MudSelect T="AdvertisementTier" Label="Tier" @bind-Value="_advertisement.Tier" Margin="Margin.Dense" Variant="Variant.Outlined">
                                                <MudSelectItem Value="AdvertisementTier.Bronze">Bronze</MudSelectItem>
                                                <MudSelectItem Value="AdvertisementTier.Silver">Silver</MudSelectItem>
                                                <MudSelectItem Value="AdvertisementTier.Gold">Gold</MudSelectItem>
                                            </MudSelect> *@
                                        </MudItem>
                                        <MudItem md="6">
                                            <div class="d-flex">
                                                <MudSwitch @bind-Value="@_advertisement.Status" Color="Color.Secondary" Style="margin-left: 5px;">Approved</MudSwitch>
                                            </div>
                                        </MudItem>
                                    </MudGrid>
                                </MudCardContent>
                            </MudCard>
                        </MudItem>
                    </MudGrid>
                </MudTabPanel>
            </MudTabs>
        </MudItem>
        <MudItem xs="6" sm="6" md="6" lg="6">
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth>Save</MudButton>
        </MudItem>
        <MudItem xs="6" sm="6" md="6" lg="6">
            <MudButton OnClick="Cancel" Variant="Variant.Filled" Color="Color.Secondary" Class="ml-auto" FullWidth>Cancel</MudButton>
        </MudItem>
    </MudGrid>
</EditForm>
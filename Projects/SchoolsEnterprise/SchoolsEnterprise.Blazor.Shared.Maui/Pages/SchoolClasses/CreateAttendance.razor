@page "/schoolclasses/attendance/{SchoolClassId}"
@using ConectOne.Blazor.Components
@using MudBlazor
@using SchoolsModule.Blazor.Pages.Attendance
@using SchoolsModule.Domain.Enums

@if (!_loaded)
{
    <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
}
else
{
    <MobilePageTitle Title="Class Attendance"></MobilePageTitle>

    <AttendanceList GroupId="@SchoolClassId" AttendanceType="AttendanceType.Class" Date="@DateTime.Now" GroupName="@(_class?.SchoolClass ?? string.Empty)" />
}
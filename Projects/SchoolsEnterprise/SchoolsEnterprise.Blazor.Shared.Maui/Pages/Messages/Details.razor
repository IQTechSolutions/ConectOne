@page "/messages/{MessageType}"
@page "/messages/{MessageType}/{MessageId}"
@using ConectOne.Blazor.Components
@using FilingModule.Blazor.Components
@using Microsoft.AspNetCore.Authorization
@using MudBlazor

@attribute [Authorize]

<style>
    .second-card {
        background-color: #17D4FF;
        background-image: linear-gradient(135deg, #17D4FF 0, #0061B5 100%);
    }
</style>

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MobilePageTitle Title="Message"></MobilePageTitle>

    <MudCard Elevation="1" Class="mt-5 rounded-lg">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Style="font-weight: 600;">@_notificationDto?.Subject</MudText>
                <MudText Typo="Typo.caption"><strong>Sent: </strong>@_notificationDto?.CreatedTime</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Class="mt-3" Typo="Typo.subtitle1" Style="font-weight: 300;">@((MarkupString)_notificationDto?.Message!)</MudText>
        </MudCardContent>
    </MudCard>

    <DocumentLinkList DocumentLinks="_notificationDto?.DocumentLinks" Documents="_notificationDto?.Documents" />
}
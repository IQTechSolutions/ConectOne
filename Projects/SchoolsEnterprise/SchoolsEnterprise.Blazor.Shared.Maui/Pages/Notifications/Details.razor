@page "/notifications/{NotificationId}"
@using ConectOne.Blazor.Components
@using Microsoft.AspNetCore.Authorization
@using MudBlazor

@attribute [Authorize]

<style>
    .second-card {
        background-color: #1a2148;
        background-image: linear-gradient(135deg, #1a2148 50, #0061B5 100%);
    }
</style>

@if (!_loaded)
{
    <Spinner></Spinner>
}
else
{
    <MobilePageTitle Title="Notification"></MobilePageTitle>
    
    <MudCard Elevation="1" Class="mt-5 rounded-lg">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Style="font-weight: 600;">@_notificationDto!.Title</MudText>
                <MudText Typo="Typo.caption"><strong>Sent: </strong>@_notificationDto!.Created</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Class="mt-3" Typo="Typo.subtitle1" Style="font-weight: 300;">@((MarkupString)_notificationDto!.Message!)</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" @onclick="@(() => RemoveNotification())" Color="Color.Error">Delete</MudButton>
        </MudCardActions>
    </MudCard>
}
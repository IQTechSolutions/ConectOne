@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor
@using Radzen.Blazor

<EditForm Model="@Country" OnValidSubmit="SaveAsync">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudGrid>
                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => Country.Code)" @bind-Value="Country.Code" Label="Code" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => Country.Name)" @bind-Value="Country.Name" Label="Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudTextField For="@(() => Country.ShortName)" @bind-Value="Country.ShortName" Label="Short Name" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <label style="padding-left:20px;">Short Descriptions</label>
                    <RadzenHtmlEditor @bind-Value=@Country.Description style="height: 450px;"/>
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="SaveAsync" ButtonType="MudBlazor.ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

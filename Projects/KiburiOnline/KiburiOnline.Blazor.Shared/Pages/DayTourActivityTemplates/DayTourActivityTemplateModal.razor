@using AccomodationModule.Domain.Enums
@using Microsoft.AspNetCore.Components.Forms
@using MudBlazor

<EditForm Model="@Template" OnValidSubmit="SaveAsync">
    <DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudGrid>
                <MudItem xs="9" md="9">
                    <MudTextField T="string" Label="Name" @bind-Text="Template.Name" ShowToolbar="false" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="3" Style="padding-top:30px;">
                    <label class="sq-radio" style="padding-right:20px !important; padding-top:4px;">
                        <span style="color:#F90; font-size:13px !important; font-weight:bold;">Display in Overview</span>
                        <InputCheckbox @bind-Value="Template.DisplayInOverview"></InputCheckbox>
                        <span class="checkmark" style="margin-top:10px;"></span>
                    </label>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect Label="Guest Type" @bind-Value="Template.GuestType" AnchorOrigin="Origin.BottomLeft" Variant="Variant.Outlined">
                        @foreach (GuestType state in Enum.GetValues(typeof(GuestType)))
                        {
                            <MudSelectItem Value="@(state)">@state</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudTextField Lines="2" T="string" Label="Summary" @bind-Text="Template.Summary" ShowToolbar="false" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="12">
                    <MudTextField Lines="4" T="string" Label="Description" @bind-Text="Template.Description" ShowToolbar="false" Variant="Variant.Outlined" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
            <MudButton Variant="Variant.Filled" OnClick="SaveAsync" ButtonType="MudBlazor.ButtonType.Submit" Color="Color.Success">Save</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>

@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.TypeSpecimen" Class="mr-3 mb-n1" />
            Add/Update Average Temperature
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12">
                <MudDatePicker Label="Month" @bind-Date="@AverageTemperature.Month" OpenTo="OpenTo.Month" FixDay="1" FixYear="2025" DateFormat="MMMM" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="AverageTemperature.AvgLow" Label="Low" FullWidth="true" />
            </MudItem>
            <MudItem xs="12">
                <MudTextField @bind-Value="AverageTemperature.AvgHigh" Label="High" FullWidth="true" />
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="Submit" Color="Color.Success">Save</MudButton>
    </DialogActions>
</MudDialog>

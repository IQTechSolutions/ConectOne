<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EversdalPrimary.Blazor.Maui"
             xmlns:components="clr-namespace:EversdalPrimary.Blazor.Maui.Components"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="EversdalPrimary.Blazor.Maui.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Page.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#1c2248" StatusBarStyle="LightContent"/>
    </Page.Behaviors>
    <Grid>
        <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type components:Routes}" />
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </Grid>

</ContentPage>

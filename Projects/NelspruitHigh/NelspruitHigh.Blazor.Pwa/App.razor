@using Microsoft.AspNetCore.Components.Authorization
@using SchoolsEnterprise.Blazor.Shared.Maui.Components.Layout
@using ShoppingModule.Blazor.Components

<CartStateProvider>
    <Router AppAssembly="@typeof(App).Assembly" NotFoundPage="typeof(Pages.NotFound)" AdditionalAssemblies="new[] { typeof(SchoolsEnterprise.Blazor.Shared.Maui.AssemblyReference).Assembly, typeof(ProductsModule.Blazor.AssemblyReference).Assembly }">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin2 />
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
    </Router>
</CartStateProvider>
